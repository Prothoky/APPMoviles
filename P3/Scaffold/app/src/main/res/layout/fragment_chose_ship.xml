<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".counter.ChoseShipFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="@string/chose"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/buttonShip1"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="75dp"
        android:hapticFeedbackEnabled="false"
        android:maxWidth="712dp"
        android:maxHeight="926dp"
        android:scaleType="centerCrop"
        android:src="@drawable/menuship1" />

    <ImageButton
        android:id="@+id/buttonShip2"
        android:layout_width="196dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="75dp"
        android:layout_marginRight="125dp"
        android:hapticFeedbackEnabled="false"
        android:maxWidth="712dp"
        android:maxHeight="926dp"
        android:scaleType="centerCrop"
        android:src="@drawable/menuship2" />

</FrameLayout>